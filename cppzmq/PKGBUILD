pkgname=cppzmq
pkgver=4.2.3
pkgrel=1
pkgdesc='Header-only C++ binding for 0MQ'
arch=('x86_64')
url='https://github.com/zeromq/cppzmq'
license=('LGPL')

source=("https://github.com/zeromq/cppzmq/archive/v${pkgver}.tar.gz")
sha256sums=('3e6b57bf49115f4ae893b1ff7848ead7267013087dc7be1ab27636a97144d373')

makedepends=('cmake>=2.8.12')
depends=('libzmq')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir build
  cd build
  cmake -D CMAKE_INSTALL_PREFIX=${pkgdir}/usr ../
  cmake --build .
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/build"
  cmake --build . --target install
}
